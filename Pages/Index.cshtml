@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<img class="bg-image" src="~/lib/images/background1.png">

<div class="container">
<div class="d-flex flex-column justify-content-center align-items-center vh-100">
<div class="container-fluid px-0 py-2">
    <div class="row">
        <!-- Increase the top padding using pt-5 or more based on the height of your menu bar -->
        <div class="col-12 text-center">

            <h1 class="display-5 fw-bold lh-1 mb-0 text-light" style="font-family: 'Pacifico', cursive; font-size: 10vw">Our Events</h1>
        </div>
    </div>
</div>



<div id="carouselEvents" class="container-fluid carousel slide py-5" data-bs-ride="carousel">
    <div class="carousel-indicators">
                @if (Model.Events != null)
                {
                <button type="button" data-bs-target="#carouselEvents" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    for (int i = 1; i < Model.Events.Count; i++)
                    {
                        <button type="button" data-bs-target="#carouselEvents" data-bs-slide-to="@i" aria-label="Slide @(i+1)"></button>
                    }
                }
    </div>
    <div class="carousel-inner">
                @if (Model.Events != null)
                {
                    var a = "active";
                    foreach (var e in Model.Events)
                    {
                        <div class="carousel-item @a">
                            <a href="/Event/@e.UrlHandle" class="carousel-link">
                                <img src="@e.ImageUrl" alt="Event Image" class="d-block" style="max-height: 400px;">
                                <div class="mt-2 px-3">
                                    <div class="mt-3">
                                        <a class="btn btn-outline-light">Get Tickets</a>
                                    </div><!-- Margin and padding to separate and align text below the image -->
                                </div>
                            </a>
                        </div>
                        
                        a = null; // Reset active class after first item
                    }
                }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselEvents" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselEvents" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
</div>
</div>


